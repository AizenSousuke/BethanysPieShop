@{
}

@model PiesListViewModel

<h1>
    Category: @Model.CurrentCategory
</h1>
@foreach (var pie in Model.Pies)
{
    <div class="col-sm-12 col-md-6">
        <div class="card">
            <div class="card-body">
                <img class="card-img" src="@pie.ImageThumbnailUrl" alt="" />
                <h2 class="card-title">@pie.Name</h2>
                <h3 class="card-subtitle text-muted">@pie.Price.ToString("c")</h3>
                <h6 class="card-text text-capitalize text-danger">@pie.Category.CategoryName</h6>
                <p class="card-body">@pie.ShortDescription</p>
                <button class="btn btn-primary float-right">View Cake</button>
            </div>
        </div>
    </div>
}