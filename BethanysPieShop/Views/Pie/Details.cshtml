@{
}

@model Pie

<div class="breadcrumb">
    <a class="breadcrumb-item" asp-controller="Pie" asp-action="List"><u class="text-primary">Back</u></a>
</div>

<div class="card container">
    <div class="thumbnail">
        <img alt="@Model.Name" src="@Model.ImageUrl" />
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <div class="caption-full">
            <h3 class="pull-right text-danger">$@Model.Price</h3>
            <h4>@Model.ShortDescription</h4>
            <p>@Model.LongDescription</p>
        </div>
    </div>
</div>
