
@model Order

<div class="jumbotron">
    <h1 class="display-4"><i class="fas fa-shopping-cart"></i> Checkout</h1>

    <form asp-action="Checkout" method="post" class="" role="form">
        <h4 class="alert alert-primary p-2">
            You're just one step away from your delicious pies.
            <div class="progress mt-1">
                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%"></div>
            </div>
        </h4>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <!-- asp-for links to Order.LastName property -->
            <label asp-for="LastName" class="col-12 control-label"></label>
            <div class="col-12">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="FirstName" class="col-12 control-label"></label>
            <div class="col-12">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="AddressLine1" class="col-12 control-label"></label>
            <div class="col-12">
                <input asp-for="AddressLine1" class="form-control" />
                <span asp-validation-for="AddressLine1" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="AddressLine2" class="col-12 control-label"></label>
            <div class="col-12">
                <input asp-for="AddressLine2" class="form-control" />
                <span asp-validation-for="AddressLine2" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ZipCode" class="col-12 control-label"></label>
            <div class="col-12">
                <input asp-for="ZipCode" class="form-control" />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="City" class="col-12 control-label"></label>
            <div class="col-12">
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="State" class="col-12 control-label"></label>
            <div class="col-12">
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Country" class="col-12 control-label"></label>
            <div class="col-12">
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="col-12 control-label"></label>
            <div class="col-12">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="col-12 control-label"></label>
            <div class="col-12">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-12">
                <input type="submit" class="btn btn-success btn-block" value="Complete order" />
            </div>
        </div>

    </form>
</div>