@using Microsoft.AspNetCore.Identity

<!-- Dependency injection -->
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <span>
        <a id="manage" class="nav-link p-2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link p-2">Logout</button>
        </form>
    </span>
    
}
else
{
    <span>
        <a class="nav-link p-2" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="nav-link p-2" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </span>
}


