<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <link href="~/Content/site.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/9782bb68c9.js" crossorigin="anonymous"></script>

</head>
<body>
    <div class="container">

        <nav class="navbar-expand navbar-dark bg-dark fixed-top" role="navigation">
            <div class="">
                <div class="navbar-header">
                    <button class="navbar-toggler flex-grow-1" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div class="container">
                    <ul class="nav navbar-nav justify-content-around">
                        <li class="p-2"><a class="btn text-white" asp-controller="Home" asp-action="Index"><div class="fas fa-home"></div> Home</a></li>
                        <li class="p-2"><a class="btn text-white" asp-controller="Pie" asp-action="List">Pies</a></li>
                        <li class="p-2"><a class="btn text-white" asp-controller="Contact" asp-action="Index">Contact</a></li>
                        <partial name="_LoginPartial" />
                        <span class="p-2">
                            <a class="btn text-white" asp-controller="ShoppingCart" asp-action="Index">
                                <!-- Invoke the View Component -->
                                @await Component.InvokeAsync("ShoppingCartSummary")
                            </a>
                        </span>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="row">
            <div class="col-sm-3">
                <p class="lead">
                    <img class="img-fluid" alt="Bethany's Pie Shop'" src="~/Images/bethanylogo.png" />
                </p>
            </div>
            <div class="col-sm-9">
                @RenderBody()
            </div>
        </div>
        <div class="row">
        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
